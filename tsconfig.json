{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "seeders/*"
      ]
    },
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true
  },
  "include": [
    "src"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  }
}